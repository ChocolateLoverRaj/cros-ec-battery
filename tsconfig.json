{
  "compilerOptions": {
    "strictNullChecks": true,
    "strictBindCallApply": true,
    "allowSyntheticDefaultImports": true,
    "target": "ESNext",
    "outDir": "./dist",
    "esModuleInterop": true,
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "jsx": "preserve"
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "./src/browser"
  ],
  "files": [
    "./src/browser/webpack.config.ts"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
